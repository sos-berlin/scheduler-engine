    <groupId>com.sos.scheduler.engine</groupId>
    <artifactId>com.sos.scheduler.engine.parent</artifactId>
    <version>1.3.12.1245</version>

    <description>Parent-Pom der Scheduler-Engine mit den allgemeinen Einstellungen</description>
    
    <packaging>pom</packaging>
    <name>${project.artifactId}</name>
    <inceptionYear>2011</inceptionYear>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <scala.version>2.9.0-1</scala.version>
        <scala.plugin.version>2.15.2</scala.plugin.version>
        <scheduler.javaCppProxyPackage>com.sos.scheduler.engine.kernel</scheduler.javaCppProxyPackage>
        <cplusplusVersion>${project.version}</cplusplusVersion>
        <sos.subversion.url>http://subversion.sos/svn/sos/scheduler/engine</sos.subversion.url>
