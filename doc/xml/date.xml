<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="../scheduler.xsl" type="text/xsl"?>

<!--$Id: date.xml,v 1.9 2004/12/10 11:20:39 jz Exp $-->

<xml_element name     = "date" 
             title    = "Perioden für ein bestimmtes Datum"
             category = "Konfiguration"
             base_dir = "../"
             parent_page = "../konfiguration.xml"
             author   = "$Author: jz $"
             date     = "$Date: 2004/12/10 11:20:39 $">

    <xml_parent_elements>
        <xml_parent_element name="run_time">
        </xml_parent_element>        
    </xml_parent_elements>
    
    <xml_attributes>
        <xml_attribute name="date" type="yyyy-mm-dd">
            <description>
                Das Datum.
            </description>
        </xml_attribute>
    </xml_attributes>
    
    
    <xml_child_elements>
        <xml_child_element name="period" multiple="yes">
            <description>
                <p>
                    Die Perioden für den Tag.
                </p>
            </description>
        </xml_child_element>        
    </xml_child_elements>
    
    
    
    <description>
        <p>
            setzt die Perioden für einen bestimmten Tag fest.
        </p>
    </description>
    
    <behavior_with_xml_element for_element="base" replace_attribute="date"/>
    
    <example>
        <pre>
&lt;date date="2004-08-22">
    &lt;period begin="10:00" end="12:00"/>
    &lt;period begin="16:00" end="22:00"/>
&lt;/date>    
        </pre>
    </example>
    <example>
        <pre>
&lt;date date="2004-09-02" begin="14:00" end="18:00"/>
        </pre>
    </example>
    
</xml_element>
