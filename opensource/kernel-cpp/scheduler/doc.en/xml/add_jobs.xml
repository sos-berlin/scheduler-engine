<xml_element name     = "add_jobs" 
             parent_page = "../xml_commands.xml"
             category = "Command"
             title    = "XML-Element &lt;add_jobs&gt;"
             base_dir = "../"
             author   = "$Author: jz $"
             date     = "$Date: 2012-06-12 21:25:54 +0200 (Di, 12 Jun 2012) $">


    <description>
        <p>
            Jobs are added with <code>temporary="yes"</code> and then started.
            Every job is deleted as soon as it ends.
        <!--Die Jobs werden mit <code>temporary="yes"</code> hinzugefügt und gestartet.
            Jeder Job wird gelöscht, sobald er endet.-->
        </p>
        <p>
            Note that job names must be unique.
        <!--Die Jobnamen müssen eindeutig sein.-->
        </p>
    </description>


    <xml_parent_elements>
        <xml_parent_element name="commands"/>
    </xml_parent_elements>


    <xml_child_elements>
        <xml_child_element name="job" multiple="yes"/>
    </xml_child_elements>
    
    <xml_answer element="ok"/>
    
</xml_element>
