<!--         title         = "Stelle in einer Jobkette"-->

<xml_element name          = "job_chain_node" 
             title         = "Position in a Job Chain"
             category      = "Answer"
             sub_directory = "answer/"
             base_dir      = "../../"
             parent_page   = "../../xml_commands.xml"
             author        = "$Author: jz $"
             date          = "$Date: 2012-06-12 21:25:54 +0200 (Di, 12 Jun 2012) $">

    <xml_parent_elements>
        <xml_parent_element name="job_chain"/>
    </xml_parent_elements>
    
    <xml_attributes>
        <xml_attribute name="state" type="text" title="Order state which has been assigned to this position in the job chain"/>
        <xml_attribute name="next_state" type="text" title="Next state for this order after successful processing"/>
        <xml_attribute name="error_state" type="text" title="Order state after an error"/>
        <xml_attribute name="orders" type="number" title="Number of orders at a given position in the job chain"/>
    <!--<xml_attribute name="state" type="text" title="Auftragszustand, dem diese Stelle zugeordnet ist"/>
        <xml_attribute name="next_state" type="text" title="Folgezustand"/>
        <xml_attribute name="error_state" type="text" title="Zustand für den Fehlerfall"/>
        <xml_attribute name="orders" type="zahl" title="Anzahl der Aufträge an dieser Stelle"/>-->
    </xml_attributes>
    
    <xml_child_elements>
        <xml_child_element name="job"/>
    </xml_child_elements>

    <description>
        <p>
        </p>
    </description>
    
        
</xml_element>
